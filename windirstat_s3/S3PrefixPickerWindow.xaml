<Window x:Class="windirstat_s3.S3PrefixPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selecionar pasta do bucket" Height="420" Width="520"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding BucketName}" FontWeight="SemiBold" Margin="0,0,0,8"/>

        <TreeView x:Name="PrefixTree" Grid.Row="1" SelectedItemChanged="PrefixTree_SelectedItemChanged"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Right">
            <TextBlock Text="{Binding SelectedPrefixDisplay}" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <Button Content="OK" Width="80" Margin="0,0,6,0" Click="OkButton_Click"/>
            <Button Content="Cancelar" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
